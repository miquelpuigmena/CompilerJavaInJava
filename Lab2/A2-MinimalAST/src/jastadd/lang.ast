Program ::= Expr*;

abstract Expr;
abstract Stmt;
abstract Literal;

FuncDecl        : Expr      ::= Name:IdDecl Arg Block;
AssgmtStmt      : Stmt      ::= Left:Literal [Right:Literal];
IdDecl                      ::= <ID:String>;
IdUse           : Literal   ::= <ID:String>;
Numeral         : Literal   ::= <NUMERAL:String>;
StmtList                    ::= Stmt*;
Arg                         ::= [StmtList];
Block                       ::= [StmtList];

